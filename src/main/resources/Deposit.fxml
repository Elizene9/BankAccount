<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onKeyPressed="#Display" onMouseMoved="#Display" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DepositController">
   <TextField fx:id="MessageDisplay" layoutX="2.0" layoutY="170.0" prefHeight="59.0" prefWidth="600.0"
              text="Enter whole number amount you would like to deposit below">
      <font>
         <Font size="18.0"/>
      </font>
   </TextField>
   <TextField fx:id="amount" layoutX="226.0" layoutY="266.0" onAction="#DepositEntered"/>
   <Button fx:id="DoneButton" layoutX="446.0" layoutY="310.0" mnemonicParsing="false" onAction="#DonePressed"
           prefHeight="69.0" prefWidth="136.0" text="DONE">
      <font>
         <Font size="24.0"/>
      </font>
   </Button>
   <TextField fx:id="Message" prefHeight="117.0" prefWidth="602.0"/>
</AnchorPane>
