<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginPageController">
   <TextField fx:id="Username" alignment="CENTER" layoutX="200.0" layoutY="141.0" prefHeight="27.0" prefWidth="199.0" />
   <Label layoutX="200.0" layoutY="100.0" prefHeight="27.0" prefWidth="103.0" text="USERNAME">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Label>
   <Label layoutX="200.0" layoutY="186.0" prefHeight="27.0" prefWidth="103.0" text="PASSWORD">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Label>
   <Button fx:id="exitButton" layoutX="416.0" layoutY="302.0" mnemonicParsing="false" onAction="#exitPressed" prefHeight="83.0" prefWidth="169.0" text="CLOSE">
      <font>
         <Font size="36.0" />
      </font>
   </Button>
   <Button fx:id="LoginBTN" layoutX="200.0" layoutY="262.0" mnemonicParsing="false" onAction="#loginPressed" prefHeight="37.0" prefWidth="199.0" text="LOGIN">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <TextField fx:id="Validation" alignment="CENTER" editable="false" prefHeight="91.0" prefWidth="600.0" text="LOGIN HERE">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </TextField>
   <PasswordField fx:id="Password" layoutX="200.0" layoutY="220.0" onAction="#loginPressed" prefHeight="27.0" prefWidth="199.0" />
</AnchorPane>
